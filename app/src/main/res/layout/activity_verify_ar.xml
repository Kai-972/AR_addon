<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- CHECKPOINT 3: Focus on geospatial data, no camera preview needed yet -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#80000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="AR Landmark Verification"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#333333"
        android:padding="12dp"
        android:text="Initializing..."
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Session State:"
        android:textColor="#AAAAAA"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/session_state_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:padding="8dp"
        android:text="Not initialized"
        android:textColor="#FFFF00"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Location:"
        android:textColor="#AAAAAA"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:padding="8dp"
        android:text="Waiting for location..."
        android:textColor="#00FF00"
        android:textSize="11sp"
        android:fontFamily="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="Accuracy:"
        android:textColor="#AAAAAA"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/accuracy_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:padding="8dp"
        android:text="No accuracy data"
        android:textColor="#FFAA00"
        android:textSize="11sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions:"
        android:textColor="#AAAAAA"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="• Grant camera and location permissions\n• Ensure ARCore is installed\n• Point camera at landmark to verify"
        android:textColor="#CCCCCC"
        android:textSize="11sp" />

    </LinearLayout>

</RelativeLayout>
